generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  characters Character[]
}

model Character {
  id      String @id @default(cuid())
  name    String
  class   String
  level   Int
  user    User   @relation(fields: [userId], references: [id])
  userId  String
}

model LoreEntry {
  id    String   @id @default(cuid())
  slug  String   @unique
  tags  String[] @db.VarChar(191)
  text  String
  createdAt DateTime @default(now())
}
